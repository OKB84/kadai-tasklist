<header>
  <h1>タスク No.<%= @task.id %></h1>
</header>
<body>
  <table class="table table-bordered">
    <tr>
      <th>id</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>タスク</th>
      <td><%= @task.content %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @task.status %></td>
    </tr>
  </table>
  
  <%= link_to '編集', edit_task_path(@task), class:"btn btn-default" %>
  <%= link_to '削除', @task, method: :delete, class:"btn btn-danger", data: { confirm: '本当に削除してよろしいですか？' } %>
</body>