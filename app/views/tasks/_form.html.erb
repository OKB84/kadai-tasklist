<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div class='error_explanation'>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content %>
  </div>
  <div>
    <%= f.label :status, 'ステータス' %>
    <%= f.select :status, ['未着手', '着手', '完了'], :include_blank => true %>
  </div>
  <%= f.submit '投稿' %>
<% end %>