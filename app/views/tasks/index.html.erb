<header>
  <h1>タスク一覧</h1>
</header>
<body>
  <% if @tasks.any? %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>タスク</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= link_to task.content, task %></td>
            <td><%= task.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @tasks %>
    </div>
  <% end %>
  
  
